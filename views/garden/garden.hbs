<main class="main-container">

  <h1 class="align-flex-start">my garden</h1>

  {{#unless plantsList}}
  <div class="garden-container garden-container--text-centered">
    <img class="flower-icon" src="/images/gardening.png">
    <p>
      Your garden is empty, {{user.name}}!<br />
      But not for very long...
    </p>
    <a href="garden/addPlant" class="button button--shadow">Add your first plant</a>
  </div>
  {{/unless}}

  {{#if plantsList}}

  <div class="garden-container">
    <img src="/images/lotus.png" alt="" class="flower-icon">
    <p class="font-xlarge">What a nice garden, {{user.name}}!</p>
    <p> Click on a plant for details or <a href="garden/addPlant" alt="add a plant">add a new plant</a>. </p>
    <ul class="garden-img-container">
      {{#each plantsList}}
      <li class="garden-img-container__li">
        <a href="garden/plantDetails/{{this.id}}"><img class="garden-img-container__img" src="{{this.images.0.url}}" alt=""></a>
        {{#if this.nickname}}
        <div class="garden-img-container__plant-name">
          <a href="garden/plantDetails/{{this.id}}"><span class="capital">{{this.nickname}}</span></a>
        </div>
        {{/if}}
        {{#unless this.nickname}}
        <div class="garden-img-container__plant-name">
          <a href="garden/plantDetails/{{this.id}}"><span class="capital">{{this.common_name}}</span></a>
        </div>
        {{/unless}}
      </li>
      <br>
      {{!-- <form action="garden/delete/{{this.id}}" method="POST"><button type="submit">Delete plant</button> </form> --}}
      {{/each}}
    </ul>

    <a href="garden/addPlant" class="button button--shadow">Add another plant</a>

  </div>
  {{/if}}



</main>