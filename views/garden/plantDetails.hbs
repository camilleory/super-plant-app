    <br />
    <p>Upload your own image</p>
    <form action="/garden/plantDetails/uploadImage/{{myPlant.id}}" method="post" enctype="multipart/form-data"
      class="upload-photo-form margin-bottom-25" align="center">

      <div class="input-group">
        <div class="custom-file">
          <input type="file" class="custom-file-input" id="inputGroupFile" aria-describedby="inputGroupFileAddon"
            name="user-image" required="true">
          <label class="custom-file-label" for="inputGroupFile">Choose file</label>
        </div>
      </div>
      <button type="submit" class="upload-photo-form__submit btn-shadow">Upload Image</button>
    </form>

    <a href="/garden/editPlant/{{myPlant.id}}" class="button button--shadow">Edit plant</a>
    <form action="/garden/delete/{{myPlant.id}}" method="POST"><button type="submit"
        class="button button--delete button--shadow">Delete plant</button></form>

    <a href="/garden" class="nav-back-link">&lt; my garden</a>

  </div>

