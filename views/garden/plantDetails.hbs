<main class="main-container">
  <h1 class="align-flex-start">add a plant</h1>

  <div class="garden-container">

    <a href="/garden" class="nav-back-link">&lt; my garden</a>
    <br>

    {{#if myPlant.nickname}}
    <h3 class="capital">{{myPlant.nickname}}</h3>
    {{/if}}
    {{#unless myPlant.nickname}}
    <h3 class="capital">{{myPlant.common_name}}</h3>
    {{/unless}}
    <div class="garden-img-container--align-items-center">
      {{#each myPlant.images}}
      <img class="plant-detail-img" src="{{url}}" alt="">
      {{/each}}
    </div>
    <br>
    <br>

    <div class="table-responsive">
      <table class="table table-hover">
        <tbody>
          <tr>
            <td class="table__title">Common Name: </td>
            <td><span class="capital">{{myPlant.common_name}}</span></td>
          </tr>
          <tr>
            <td class="table__title">Scientific Name: </td>
            <td><span class="capital">{{myPlant.scientific_name}}</span></td>
          </tr>
          <tr>
            <td class="table__title">Family Name: </td>
            <td><span class="capital">{{myPlant.family_common_name}}</span></td>
          </tr>
          {{#if myPlant.nickname}}
          <tr>
            <td class="table__title">Nickname: </td>
            <td><span class="capital">{{myPlant.nickname}}</span></td>
          </tr>
          {{/if}}
          {{#if myPlant.note}}
          <tr>
            <td class="table__title">Note: </td>
            <td>{{myPlant.note}}</td>
          </tr>
          {{/if}}
          {{#if myPlant.water}}
          <tr>
            <td class="table__title">Water amount: </td>
            <td id="water">{{#each this.waterImages}}<img height=30px src="{{this}}">{{/each}}</td>
          </tr>
          {{/if}}
          {{#if myPlant.position}}
          <tr>
            <td class="table__title">Optimal position: </td>
            <td id="position"><img height=30px src="{{this.positionImageSrc}}"></td>
          </tr>
          {{/if}}
        </tbody>
      </table>
    </div>




