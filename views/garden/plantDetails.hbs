<main class="plant-detail-container">

  {{#if myPlant.nickname}}
    <h3>{{myPlant.nickname}}</h3>
  {{/if}}
  {{#unless myPlant.nickname}}
    <h3>{{myPlant.common_name}}</h3>
  {{/unless}}
{{!-- <li><img height="250px" src="{{myPlant.images.0.url}}" alt=""></li> --}}
<div class="plant-detail-img-container">
{{#each myPlant.images}}
<img class="plant-detail-img" height="250px" src="{{url}}" alt="">
{{/each}}
</div>
<br>
<br>

<h4>Upload you own image</h4>
<form action="/garden/plantDetails/uploadImage/{{myPlant.id}}" method="post" enctype="multipart/form-data">
<input type="file" name="user-image" id="" required="true">
<button type="submit" class="uploadimg-btn-style btn-shadow">Upload Image</button>
</form>
<br>

<li>Scientific Name: {{myPlant.scientific_name}}</li>
<li>Common Name: {{myPlant.common_name}}</li>
<li>Family Common Name: {{myPlant.family_common_name}}</li>
<li>Nickname: {{myPlant.nickname}}</li>
<li>Note: {{myPlant.note}}</li>
<li>Water amount: {{myPlant.water}}</li>
<li>Optimal position: {{myPlant.position}}</li>

<br>



<form action="/garden/delete/{{myPlant.id}}" method="POST"><button type="submit">Delete plant</button></form>

 
<a href="/garden/editPlant/{{myPlant.id}}">Edit plant</a>
<br> 
<a href="/garden">Go back to your garden</a>

</main>