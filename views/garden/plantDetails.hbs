<main class="plant-detail-container">
  <a href="/garden" class="text-left font-normal padding-left">&lt; my garden</a>
  <br>

  {{#if myPlant.nickname}}
  <h3 class="capital">{{myPlant.nickname}}</h3>
  {{/if}}
  {{#unless myPlant.nickname}}
  <h3 class="capital">{{myPlant.common_name}}</h3>
  {{/unless}}
  {{!-- <li><img height="250px" src="{{myPlant.images.0.url}}" alt=""></li> --}}
  <div class="plant-detail-img-container">
    {{#each myPlant.images}}
    <img class="plant-detail-img" src="{{url}}" alt="">
    {{/each}}
  </div>
  <br>
  <br>

  <div class="table-responsive">
    <table class="table table-hover">
      <tbody>
        <tr>
          <td class="tabletitle">Common Name: </td>
          <td><span class="capital">{{myPlant.common_name}}</span></td>
        </tr>
        <tr>
          <td class="tabletitle">Scientific Name: </td>
          <td><span class="capital">{{myPlant.scientific_name}}</span></td>
        </tr>
        <tr>
          <td class="tabletitle">Family Name: </td>
          <td><span class="capital">{{myPlant.family_common_name}}</span></td>
        </tr>
        {{#if myPlant.nickname}}
        <tr>
          <td class="tabletitle">Nickname: </td>
          <td><span class="capital">{{myPlant.nickname}}</span></td>
        </tr>
        {{/if}}
        {{#if myPlant.note}}
        <tr>
          <td class="tabletitle">Note: </td>
          <td>{{myPlant.note}}</td>
        </tr>
        {{/if}}
        {{#if myPlant.water}}
        <tr>
          <td class="tabletitle">Water amount: </td>
          <td id="water">{{myPlant.water}}</td>
        </tr>
        {{/if}}
        {{#if myPlant.position}}
        <tr>
          <td class="tabletitle">Optimal position: </td>
          <td id="position">{{myPlant.position}}</td>
        </tr>
        {{/if}}
      </tbody>
    </table>
  </div>





