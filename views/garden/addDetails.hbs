<main class="main-container">

  <h1 class="align-flex-start">add a plant</h1>

  <div class="garden-container">
    <a href="/garden" class="nav-back-link">&lt; my garden</a>
    <br />
    <img class="flower-icon" src="/images/leaf.png">
    <p class="font-xlarge">Add some details to your plant (optional).</p>
    <form action="/garden/addDetails/{{myPlant.id}}" method="post" class="form">
      <label for="" class="label">Nickname:</label>
      <input type="text" name="nickname" class="form__input">
      <label for="" class="label">Notes:</label>
      <input type="text" name="note" class="form__input">
      <label for="" class="label">Water needed:</label>
      <select name="water" title="Select water amount" class="blue-border">
        <option disabled selected>Select water amount</option>
        <option>Only little water</option>
        <option>Average amount of water</option>
        <option>Big amount of water</option>
      </select>
      <label for="" class="label">Optimal position:</label>
      <select name="position" class="blue-border margin-bottom-25">
        <option disabled selected>Select best position</option>
        <option>Full Sun</option>
        <option>Partial Shade</option>
        <option>Shade</option>
      </select>
      <button type="submit" class="button button--shadow">Add to my garden</button>
    </form>
    <br />
    <a href="/garden" class="nav-back-link">&lt; my garden</a>
  </div>
</main>