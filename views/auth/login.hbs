<main class="form-container">
  <h1>Login</h1>

  {{#if message}}
  <div class="error-msg">{{message}}</div>
  {{/if}}

  <form action="/auth/login" method="post" class="form-container">
    {{!-- <label for="email">Email:</label> --}}
    <input type="email" name="email" placeholder="email">
    <br />
    {{!-- <label for="password">Password: </label> --}}
    <input type="password" name="passwd" placeholder="password">
    <br />
    <button type="submit" class="btn-style btn-shadow">Login</button>
    {{#unless user}}
    <a href="/auth/google" class="google-login-btn btn-shadow">Login with Google</a>
    {{/unless}}
  </form>
  <br />
  <p>Don't have an account? <a href="/auth/signup">Sign up</a> instead.</p>