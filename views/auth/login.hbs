<span class="logo">all my plants</span>
<br /><br />
<main class="form-container">
  <h1>Login</h1>

  {{#if message}}
  <p class="error-msg">{{message}}</p>
  {{/if}}

  <form action="/auth/login" method="post" class="form-container">
    <label for="email">Email:</label>
    <input type="email" name="email" placeholder="Email">
    <br />
    <label for="password">Password: </label>
    <input type="password" name="passwd" placeholder="*******">
    <br />
    <button type="submit" class="btn-style btn-shadow">Login</button>
    {{#unless user}}
    <a href="/auth/google" class="google-login-btn btn-shadow">Login with Google</a>
    {{/unless}}
  </form>
  <br />
  <p>Don't have an account? <a href="/auth/signup">Sign up</a> instead.</p>